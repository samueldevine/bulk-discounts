<h1>Enter some information about your new discount</h1>

<%= form_with model: @bulk_discount, url: merchant_bulk_discounts_path(@merchant), local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :percentage %>
  <%= f.text_field :percentage %><br>

  <%= f.label :quantity %>
  <%= f.text_field :quantity %><br>

  <%= f.submit %>
<% end %>
